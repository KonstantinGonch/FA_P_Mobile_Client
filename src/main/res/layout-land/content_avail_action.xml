<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_avail_action"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgr_tablet"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_avail_action"
    tools:context="com.raxsoft.univer_project_client_side.AvailActionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity = "center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "@string/av_actions"
            android:textColor = "@color/colorWhite"
            android:textSize = "40sp"
            android:layout_marginBottom="190dp"
            android:layout_weight = "1"
            android:layout_gravity = "center"
            android:gravity = "center"/>
        <Button
            android:id = "@+id/button_reveal_state"
            android:layout_weight = "1"
            android:layout_width="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_height="wrap_content"
            android:text= "@string/view_stat"
            android:textSize="25sp"/>

    </LinearLayout>



</FrameLayout>
